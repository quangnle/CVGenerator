@model CVGenerator.Models.ChangePasswordViewModel
<div class="body-content clearfix">

    <div class="bg-color2">
        <div class="container">

            <div class="col-md-12 col-sm-12">
                <!-- Block side right -->
                <div class="block-section box-side-account">
                    <h3 class="no-margin-top">Change Password</h3>
                    <hr />
                    <div class="row">
                        <div class="col-md-7">
                            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
                            {
                                <span class="field-validation-valid text-danger"
                                      data-valmsg-for="Info"
                                      data-valmsg-replace="true">
                                </span>

                                <div class="form-group">
                                    <label>Old Password</label>
                                    <input type="password" class="form-control" name="OldPassword" placeholder="Your Current Password">
                                    <div class="text-danger">@Html.ValidationMessageFor(m => m.OldPassword)</div>
                                </div>
                                <div class="form-group">
                                    <label>New Password</label>
                                    <input type="password" class="form-control" name="Password"
                                           placeholder="New Password">
                                    <div class="text-danger">@Html.ValidationMessageFor(m => m.Password)</div>
                                </div>
                                <div class="form-group">
                                    <label>Re-type New Password</label>
                                    <input type="password" class="form-control" name="PasswordConfirmation"
                                           placeholder="Re-type New Password">
                                    <div class="text-danger">@Html.ValidationMessageFor(m => m.PasswordConfirmation)</div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-theme btn-t-primary">Change Password</button>
                                </div>
                            }
                        </div>
                    </div>
                </div><!-- end Block side right -->
            </div>
        </div>
    </div>
</div>
